<!DOCTYPE html>
<html>
<head>
  <title>Home - Chọn đề thi</title>
  <meta charset="utf-8">
  <style>
    body { font-family: Arial, sans-serif; background: #f3f4f6; }
    .container { max-width: 600px; margin: 40px auto; background: #fff; border-radius: 12px; box-shadow: 0 4px 24px rgba(0,0,0,0.12); padding: 32px 24px; }
    h2 { text-align: center; margin-bottom: 24px; }
    ul { list-style: none; padding: 0; }
    li { margin-bottom: 18px; }
    .test-link { display: block; padding: 16px; background: #e0e7ff; border-radius: 8px; color: #1e293b; text-decoration: none; font-weight: bold; transition: background 0.2s; }
    .test-link:hover { background: #a5b4fc; }
  </style>
</head>
<body>
  <div class="container">
    <h2>Chọn đề thi</h2>
    <% if (tests && tests.length) { %>
      <ul>
        <% tests.forEach(function(test) { %>
          <li>
            <a class="test-link" href="/test/<%= test.id %>">
              <%= test.name || test.id %> <span style="font-weight:normal; color:#64748b;">(<%= test.desc || '' %>)</span>
            </a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <div>Chưa có đề thi nào.</div>
    <% } %>
  </div>
</body>
</html>
